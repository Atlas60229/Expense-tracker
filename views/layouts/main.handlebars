<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>家庭記帳本</title>
  <script src='https://kit.fontawesome.com/20ebdc1c11.js' crossorigin='anonymous'></script>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>

  <body class="bg-light">
    <header>
      <!-- navigation -->
      <nav
        class="navbar navbar-dark justify-content-between"
        style="padding: 8px 16px; background-color: #e95420;"
      >
        <a class="navbar-brand" href="/">{{#if isAuthenticated}}
            {{user.name}}
          {{/if}}家庭記帳本</a>

        <!-- if syntax: {{#if 條件}} 內容 {{/if}} -->
        {{#if isAuthenticated}}
          <div>
            <a href="/users/logout" class="btn btn-outline-light">登出</a>
          </div>

        {{else}}
          <a href="/users/login" class="btn btn-outline-light">登入</a>
        {{/if}}

      </nav>

    </header>
    <main>
      <div class="container mt-3">
        {{{body}}}
      </div>
    </main>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>