<div class="row">
  <div class="col-10 col-sm-9 col-lg-7 mx-auto">
    <form action="/expense/{{ expense._id }}?_method=PUT" method="POST">
    {{!-------------------- Title --------------------}}
      <div class="row g-3 align-items-center mb-5">
        <div class="col-3 col-sm-2">
          <label class="col-form-label" for="">＊為必填</label>
        </div>
        <div class="col text-center">
          <h5>請修改你的支出</h5>
        </div>
      </div>

    {{!-------------------- Input --------------------}}
      <div class="row g-3 align-items-center mb-5">
        <div class="col-3 col-sm-2">
          <label class="col-form-label form-label-name" for="amount" ><span class="text-danger">*</span>金額</label>
        </div>
        <div class="col">
          <input class="form-control form-input" type="number" id="amount" name="amount" value="{{expense.amount}}" required>
        </div>
      </div>

      <div class="row g-3 align-items-center mb-5">
        <div class="col-3 col-sm-2">
          <label class="col-form-label form-label-name" for="name"><span class="text-danger">*</span>名稱</label>
        </div>
        <div class="col">
          <input class="form-control form-input" type="text" id="name" name="name" value="{{expense.name}}" required>
        </div>
      </div>

      <div class="row g-3 align-items-center mb-5">
        <div class="col-3 col-sm-2">
          <label class="col-form-label form-label-name" for="date"><span class="text-danger">*</span>日期</label>
        </div>
        <div class="col">
          <input class="form-control form-input" type="date" id="date" name="date" value="{{expense.date}}" required>
        </div>
      </div>

      <div class="row g-3 align-items-center mb-5">
        <label for="category" class="form-label col-3 col-sm-2">項目:</label>
        <select class="form-select col" aria-label="Default select example" id="category" name="category" required>
          <option value="{{expense.categoryName}}" hidden="hidden" selected="selected">{{expense.categoryName}}</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>

  {{!-------------------- Button --------------------}}
      <div class="row g-3 align-items-center mb-3">
        <div class="col-3 col-sm-2">
        </div>
        <div class="d-grid col">
          <button class="btn btn-success new-account-btn" type="submit">修改</button>
        </div>
      </div>

      <div class="row g-3 align-items-center">
        <div class="col-3 col-sm-2">
        </div>
        <div class="d-grid col">
          <a href="/" class="btn btn-secondary new-account-btn">取消</a>
        </div>
      </div>

    </form>
  </div>
</div>